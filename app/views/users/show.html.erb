<% provide(:title, @user.name) %>

<div class="jumbotron">
  <div style="margin-top: -100px; height: 180px;">
    <div style="display:block; margin-left: 25%; margin-right: 25%;">
    <div style="margin-top: 100px;"><%= gravatar_for(@user, size: 160) %>
    </div>

    <!--div for text area-->
    <div>
      <h1 style="text-align:left; margin-top: -15px; font-size: 40px;">
        <%= @user.name %>
      </h1>
        <p style="text-align:left; margin-top: -20px; line-height: 0%">
          <%= link_to image_tag("icon-map.png", alt: "map", :style =>"width: 30px; align: left;"), mailto:@user.email%>
        Location here
            </p>
        <p style="text-align:left; margin-top: -10px; line-height: 0%">
          <%= link_to image_tag("icon-trade.png", alt: "map", :style =>"width: 30px; align: left;")%>
        <%= @user.microposts.count %> Needs, <%= @user.offers.count %> Haves
            </p>
        <p style="text-align:left; margin-top: -10px; line-height: 0%">
       <%= link_to image_tag("icon-mail.png", alt: "mail", :style =>"width: 30px;"), mailto:@user.email%> Send a message
      </p>
    </div>
  </div>
</div>
</div>

    <% if @user.microposts.any? %>
      <div class="row">
        <div class="col-md-6">
            <h3 style="text-align: center;">YOUR NEEDS (<%= @user.microposts.count %>)</h3>
        <table class="table table-hover">
            <tbody>
                <%= render @microposts %>
                <%= will_paginate @microposts %>
            </tbody>
        </table>
      </div>
      <% end %>

      <div class="col-md-6">
        <h3>YOUR HAVES (<%= @user.offers.count %>)
          </h3>
        <% if current_user?(@user) %>
            <section>
              <%= render 'shared/offer_form' %>
            </section>
          <% end %>

        <% if @user.offers.any? %>

          <ol class="microposts" style="padding-left: 30px;">
            <%= render @offers %>
            <%= will_paginate @offers %>
          </ol>
        
        <% end %>
      </div>
    </div>









