<% if signed_in? %>
  <div class="jumbotron" >
    <div style="width: 100%; height: 200px; display:block; margin-left: auto; margin-right: auto; padding-top: 50px;">
          <%= link_to image_tag("bartershop_logo.png", alt: "bartershop", :style => "width: 500px; display: block; margin-left: auto; margin-right: auto;"), '#'%>
    </div> 
</div>
   
<%= render 'shared/feed' %>
  

<% else %>

<!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container" style="height: 450px; display:block; text-align: center;">
          <p style="font-size: 18px;">trade skills, services, and goods.</p>
          <%= link_to image_tag("bartershop-logo-05.png", alt: "bartershop", :style => "width: 500px;"), '#'%>
         <p style="font-size: 18px;">discover your local community.</p> <br><br>

         <%= link_to "Get Started!", signup_path,
                                class: "btn btn-primary btn-lg" %>


        <!--<p><a class="btn btn-primary btn-lg" role="button" data-toggle="modal" data-target="#myModal">Get Started &raquo;</a></p>-->
          
          
          <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Welcome!</h4>
              </div>
              <div class="modal-body">
                Create an Account
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Done</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
          
          
          
          
        <p style="font-size: 12px;">Already on BarterShop? <br> <a href="https://thawing-hollows-2532.herokuapp.com/login">Login here.</a></p>
      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
          
    
          
        <div class="col-md-4">
          <%= link_to image_tag("_staticpage/CreatePost.jpg", alt: "grey", :style => "margin-left: -15px; width: 270px;"), '#'%>
        </div>

        <div class="col-md-4">
          <%= link_to image_tag("_staticpage/UserPosts.jpg", alt: "grey", :style => "margin-left: -15px; width: 270px;"), '#'%>
        </div>

        <div class="col-md-4">
          <%= link_to image_tag("_staticpage/UserPosts2.jpg", alt: "grey", :style => "margin-left: -15px; width: 270px;"), '#'%>
        </div>

        <div class="col-md-4">
          <%= link_to image_tag("_staticpage/UserPosts3.jpg", alt: "grey", :style => "margin-left: -15px; width: 270px;"), '#'%>
        </div>
      </div>


    </div> <!-- /container -->

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>

<% end %>